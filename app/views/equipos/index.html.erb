<div class="container">
  <p id="notice"><%= notice %></p>

  <div class="jumbotron ">
    <h1 class="text-center">Equipos</h1>
  </div>

  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Nombre</th>
        <th colspan="3" class="text-center"></th>
      </tr>
    </thead>

    <tbody>
      <% @equipos.each do |equipo| %>
        <tr>
          <td><%= equipo.nombre %></td>
          <td><%= link_to 'Mostrar', equipo %></td>
          <td><%= link_to 'Editar', edit_equipo_path(equipo) %></td>
          <td><%= link_to 'Eliminar', equipo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Registrar Nuevo Equipo', new_equipo_path %>
</div>

